%a)rezolutie temporara de 2ms
a=2.5;
f= 0.2;
f=f * 2 * pi;
t=0:0.002:15;
y=a * sawtooth(f * t)%functie generare semnal triunghiular
plot(t,y);
axis([0 15 -2 1]);xlabel('Time (sec)');ylabel('Amplitude');%limitele axelor in reprezentare

%b)rezolutie temporara de 20ms
a=2.5;
f= 0.2;
f=f * 2 * pi;
t=0:0.02:15;
y=a * sawtooth(f * t)
plot(t,y);
axis([0 15 -2 1]);xlabel('Time (sec)');ylabel('Amplitude');

%c)rezolutie temporara de 200ms
a=2.5;
f= 0.2;
f=f * 2 * pi;
t=0:0.2:15;
y=a * sawtooth(f * t)%functie generare semnal triunghiular
plot(t,y);
axis([0 15 -2 1]);xlabel('Time (sec)');ylabel('Amplitude');%limitele axelor in reprezentare